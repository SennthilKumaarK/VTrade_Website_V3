<script type="text/javascript">

    $(document).ready(function () {

        $("#lstProductItems").hide();
        $("#lstCategoryItems").hide();

        $('#productitems_loader').show();
        $('#categoryitems_loader').show();

        setTimeout(function () {

            GetCategoryItems();
            $('#categoryitems_loader').hide();
            $("#lstCategoryItems").show();


            GetProductItems();
            $('#productitems_loader').hide();
            $("#lstProductItems").show();


        }, 5000);
    });

    function GetCategoryItems() {
        $("#lstCategoryItems").load("/Home/GetProductCategories");
    }

    function GetProductItems() {
        $("#lstProductItems").load("/Home/GetProductItems");
    }
</script>